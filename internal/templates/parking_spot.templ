package templates

templ ParkingSpot(Name string, FreeSpots int) {
<div class="bg-white shadow-md border rounded-lg p-4">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{Name}</h3>
  if FreeSpots > 0 {
    <p class="mt-2 text-sm text-green-600 dark:text-green-300">Available Spots: {FreeSpots}</p>
  } else {
    <p class="mt-2 text-sm text-red-600 dark:text-red-300">No available spots</p>
  }
</div>
}